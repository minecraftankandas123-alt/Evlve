public class ProfileTab extends JPanel {
    private EvolveApp app;

    public ProfileTab(EvolveApp app) {
        this.app = app;
        setLayout(new BorderLayout());
        JLabel label = new JLabel("Profile, Followers, Following", SwingConstants.CENTER);
        label.setFont(new Font("Arial", Font.BOLD, 24));
        add(label, BorderLayout.NORTH);

        // Placeholder: Add your profile info, edit, followers/following
        add(new JLabel("Profile info goes here...", SwingConstants.CENTER), BorderLayout.CENTER);
    }
}
