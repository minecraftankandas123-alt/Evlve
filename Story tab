import javax.swing.*;
import java.awt.*;

public class StoriesTab extends JPanel {
    private EvolveApp app;

    public StoriesTab(EvolveApp app) {
        this.app = app;
        setLayout(new BorderLayout());
        JLabel label = new JLabel("Stories: Carousel", SwingConstants.CENTER);
        label.setFont(new Font("Arial", Font.BOLD, 24));
        add(label, BorderLayout.NORTH);

        // Placeholder: Add your stories carousel here
        add(new JLabel("Stories carousel goes here...", SwingConstants.CENTER), BorderLayout.CENTER);
    }
}
