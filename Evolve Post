import java.util.ArrayList;

public class EvolvePost {
    private EvolveUser user;
    private String caption;
    private String imagePath;
    private ArrayList<EvolveUser> likes;
    private ArrayList<String> comments;

    public EvolvePost(EvolveUser user, String caption, String imagePath) {
        this.user = user;
        this.caption = caption;
        this.imagePath = imagePath;
        this.likes = new ArrayList<EvolveUser>();
        this.comments = new ArrayList<String>();
    }

    public EvolveUser getUser() { return user; }
    public String getCaption() { return caption; }
    public String getImagePath() { return imagePath; }
    public ArrayList<EvolveUser> getLikes() { return likes; }
    public ArrayList<String> getComments() { return comments; }

    public void addLike(EvolveUser user) {
        if (!likes.contains(user)) likes.add(user);
    }
    public void addComment(String comment) {
        comments.add(comment);
    }
    public String toString() {
        return user.getUsername() + ": " + caption + " [Image: " + imagePath + "]";
    }
}
